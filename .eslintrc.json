{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "semi": [2, "always"],
        "yoda": "error",
        "no-extra-semi": "error",
        "no-trailing-spaces": "error",
        "no-multi-spaces": "error",
        "no-multi-str": "error",
        "no-useless-escape": "off",
        "comma-dangle": ["error", "never"],
        "no-dupe-else-if": "error",
        "no-duplicate-case": "error",
        "no-unreachable": "error",
        "use-isnan": "error",
        "no-eval": "error",
        "no-var": "error",
        "no-undef": 0,
        "arrow-parens": ["error", "as-needed"],
        "prefer-arrow-callback": ["error", {
            "allowNamedFunctions": true
        }],
        "comma-spacing": ["error", {
            "before": false,
            "after": true
        }],
        "keyword-spacing": ["error", {
            "overrides": {
                "if": {"after": false}, 
                "for": {"after": false}, 
                "while": {"after": false},
                "switch": {"after": false}
            }
        }]
    }
}
